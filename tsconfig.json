{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "noImplicitAny": false,
        "rootDir": "/",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "experimentalAsyncFunctions": false,
        "noEmitOnError": true
    },
    "fileGlobs": [
        "./src/**/*.ts",
        "./typings/**/*.ts",
        "!./node_modules/**",
        "!./modules_dart/**",
        "!./packages/**",
        "!./dist/**",
        "!./temp/**"
    ],
    "exclude": [
        "node_modules",
        "jspm_packages"
    ]
}